apiVersion: autoscaling/v2beta2s
kind: HorizontalPodAutoscaler
metadata:
  name: server-hpa
  namespace: imgconverter
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: server-deployment
  maxReplicas: 1
  minReplicas: 1
  metrics:
  - type: Resource
    resource:
      name: cpu
      targetAverageUtilization: 50
