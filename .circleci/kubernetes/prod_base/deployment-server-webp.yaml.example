apiVersion: apps/v1
kind: Deployment
metadata:
  name: server-webp-deployment
  labels:
    app: server-webp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: server-webp-main-pod 
  template:
    metadata:
      labels:
        app: server-webp-main-pod
    spec:
      containers:
        - image: $DOCKER_ID/$DOCKER_IMAGE_NAME-webp:$IMAGE_BUILD_NUMBER
          name: server-webp-main-pod
          ports:
            - containerPort: $SERVER_WEBP_PORT
          args:
            - python
            - app.py
          env:
            - name: SERVER_WEBP_PORT
              valueFrom:
                configMapKeyRef:
                  key: SERVER_WEBP_PORT
                  name: server-webp-env
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                configMapKeyRef:
                  key: AWS_ACCESS_KEY_ID
                  name: server-webp-env
            - name: AWS_OBJECT_EXPIRES_IN
              valueFrom:
                configMapKeyRef:
                  key: AWS_OBJECT_EXPIRES_IN
                  name: server-webp-env
            - name: AWS_S3_BUCKET
              valueFrom:
                configMapKeyRef:
                  key: AWS_S3_BUCKET
                  name: server-webp-env
            - name: AWS_DEFAULT_REGION
              valueFrom:
                configMapKeyRef:
                  key: AWS_DEFAULT_REGION
                  name: server-webp-env
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                configMapKeyRef:
                  key: AWS_SECRET_ACCESS_KEY
                  name: server-webp-env
          livenessProbe:
            httpGet:
              path: /health
              port: $SERVER_WEBP_PORT
            initialDelaySeconds: 15
            timeoutSeconds: 1
            periodSeconds: 10
          resources:
            requests:
              cpu: 200m
            limits:
              cpu: 500m

