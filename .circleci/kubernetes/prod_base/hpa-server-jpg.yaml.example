apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: server-jpg-hpa
  namespace: image-converter-main
  labels:
    app: server-jpg
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: server-jpg-deployment
  maxReplicas: 1
  minReplicas: 1
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 80
